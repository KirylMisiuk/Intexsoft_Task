<% include components/_header.ejs %>
<% include components/_navbar_auth.ejs%>
<div class="c">
    <form method="post" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <textarea id="name" name="name" class="materialize-textarea"></textarea>
                <label for="textarea1">Book Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <textarea id="author" name="author" class="materialize-textarea"></textarea>
                <label for="textarea1">Author</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input name="page_count" type="number" min="1" max="9000" onKeyDown="limitText(this,3)">
                <label for="textarea1">Page count</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input name="year" type="number" min="1900" max="2100" onKeyDown="limitText(this,3)">
                <label for="textarea1">YYYY</label>
            </div>
        </div>
        <script type="text/javascript">
            function limitText(limitField, limitNum) {
                if (limitField.value.length > limitNum) {
                    limitField.value = limitField.value.substring(0, limitNum);
                }
            }
        </script>
        <button class="btn waves-effect waves-light red accent-1" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
