<% include _header.ejs %>
<% include _navbar_guest.ejs %>
<div class="section"></div>
<form method="post">
    <div style="text-align: center;">
        <h5 class="pink-text ">Please, register new account</h5>
        <div class="section"></div>
        <div class="container">
            <div class="z-depth-1 grey lighten-4 row"
                 style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                <form class="col s12" method="post">
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input type='text' name='name' id='name'/>
                            <label for='email'>Library Name</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input  type='password' name='password' id='password'/>
                            <label for='password'>Enter your password</label>
                        </div>
                        <label style='float: right;'>
                            <a class='pink-text' href='#!'><b>Forgot Password?</b></a>
                        </label>
                    </div>

                    <br/>
                    <div style="text-align: center;">
                        <div class='row'>
                            <button type='submit' name='btn_login'
                                    class='col s12 btn btn-large waves-effect pink lighten-2'>Register
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <a href="/signin">Have account?</a>
    </div>
</form>
<% if (message.length > 0) { %>
    <div class="card-panel teal lighten-2"><%= message %></div>
<% } %>
